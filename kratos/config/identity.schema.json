{
  "$id": "https://github.com/pngouin/k8s-ory-example/blob/main/kratos/config/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              },
              "totp": {
                "account_name": true
              },
              "webauthn": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "name": {
          "type": "object",
          "properties": {
            "first": {
              "title": "First Name",
              "type": "string"
            },
            "last": {
              "title": "Last Name",
              "type": "string"
            }
          }
        },
        "role": {
          "title": "Role",
          "type": "string",
          "default": "user",
          "enum": ["user", "admin"]
        },
        "group": {
          "title": "Group",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["email"],
      "additionalProperties": true
    }
  }
}
